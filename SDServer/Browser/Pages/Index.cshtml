@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div class="row">
        <div class="col-2">
            <select class="form-select" id="SelectedProtocol">
                <option selected value="SD">SD</option>
                <option selected value="FT">FT</option>
            </select>
        </div>
        <div class="col-3">
            <input type="text" class="form-control" id="SelectedAddress" placeholder="Enter address" value="127.0.0.1" />
        </div>
        <div class="col-6">
            <input type="text" class="form-control" name="searchName" value="/foo/bar" />
        </div>
        <div class="col-1">
            <button id="btnSend" class="btn btn-success">GO</button>
        </div>

    </div>
</div>
